<?xml version="1.0" encoding="utf-8"?>
<!-- shape如果不声明形状则默认为正方形 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"  >

    <corners android:topLeftRadius="50dp" android:topRightRadius="50dp" />
    <!-- 圆角，你也可以对不同的角设置不同的数值 -->

    <solid android:color="#A0A8A6" />
    <!-- 形状的填充色 -->

    <stroke
        android:width="0dp"
        android:color="#CCCCCC" />
    <!-- 边框宽度和颜色 -->

</shape>