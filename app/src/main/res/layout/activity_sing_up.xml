<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="70dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/hanna"
            android:gravity="center_vertical"
            android:letterSpacing=".05"
            android:text="Sign Up"
            android:textColor="#FFD25E"
            android:textSize="42dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="50dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:baselineAligned="true">

            <TextView
                android:id="@+id/txt_introduce_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hanna"
                android:lineHeight="36dp"
                android:text="Falling Down A.K.A"
                android:textAlignment="center"
                android:textColor="#4DC3A7"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_introduce_zh_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jf_openhuninn"
                android:lineHeight="36dp"
                android:text="救救我啊我救我"
                android:textAlignment="center"
                android:textColor="#4DC3A7"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_introduce_zh_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:fontFamily="@font/jf_openhuninn"
            android:lineHeight="36dp"
            android:text="是一款幫助手機掉落時\n可以發出緊急通知給用戶的好夥伴"
            android:textAlignment="center"
            android:textColor="#4DC3A7"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hanna"
                android:text="Account"
                android:textColor="#4DC3A7"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_sign_up_account"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/login_input_background"
                android:ems="10"
                android:fontFamily="@font/hanna"
                android:hint="Please Enter Your Account"
                android:inputType="textPersonName"
                android:paddingHorizontal="10dp" />

            <TextView
                android:id="@+id/txt_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hanna"
                android:text="Password"
                android:textColor="#4DC3A7"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_sign_up_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/login_input_background"
                android:ems="10"
                android:fontFamily="@font/hanna"
                android:hint="Please Enter Your Password"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp" />

            <TextView
                android:id="@+id/txt_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hanna"
                android:text="Username"
                android:textColor="#4DC3A7"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_sign_up_username"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/login_input_background"
                android:ems="10"
                android:fontFamily="@font/hanna"
                android:hint="Please Enter Your Username"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_sign_up_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_button"
                android:fontFamily="@font/hanna"
                android:letterSpacing=".05"
                android:text="Create Now"
                android:textColor="@color/white" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_sign_up_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/reject_button"
                android:fontFamily="@font/hanna"
                android:letterSpacing=".05"
                android:text="Just Kidding"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>